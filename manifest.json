{
  "manifest_version": 3,
  "name": "HJ的Chrome拓展",
  "version": "1.0",
  "description": "HJ的Chrome拓展 - 提供JSON数据格式化、复制和微信小程序mock数据生成功能",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "public/images/icon16.png",
      "48": "public/images/icon48.png",
      "128": "public/images/icon128.png"
    }
  },
  "icons": {
    "16": "public/images/icon16.png",
    "48": "public/images/icon48.png",
    "128": "public/images/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "scripting",
    "alarms",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}